const Discord = require('discord.js');
const { google } = require('googleapis');
const auth = new google.auth.GoogleAuth({
  scopes: ['https://www.googleapis.com/auth/drive', 'https://www.googleapis.com/auth/spreadsheets.readonly'],
});
const drive = google.drive({ version: 'v3', auth });
const sheets = google.sheets({ version: 'v4', auth });
const client = new Discord.Client();

// Constants
const SPREADSHEET_ID = '11wOVNL0OkzGjUrPF85o-7KNfC6vx2hdSYEDMbZWG4fg';
const RANGE = 'Sheet1!A:E';
const COLUMN = 3; // Change to the column number you want to track
const DISCORD_WEBHOOK_URL = 'INSERT_DISCORD_WEBHOOK_URL_HERE';
let isNotifying = false;

// Function to send a Discord message via webhook
async function sendMessage(message) {
  const webhook = new Discord.WebhookClient({ url: DISCORD_WEBHOOK_URL });
  await webhook.send('@everyone ' + message); // Mention @everyone in the message
}

// Function to check for changes in the specified column of the spreadsheet
async function checkForChanges() {
  try {
    const response = await sheets.spreadsheets.values.get({
      spreadsheetId: SPREADSHEET_ID,
      range: RANGE,
    });
    const rows = response.data.values;
    if (rows) {
      for (let i = 1; i < rows.length; i++) { // Start from second row to exclude headers
        const row = rows[i];
        if (row[COLUMN - 1]) { // Check if the specified column has a value
          const message = `Cell ${String.fromCharCode(65 + COLUMN - 1)}${i + 1} in the spreadsheet has changed to: ${row[COLUMN - 1]}`;
          sendMessage(message);
        }
      }
    } else {
      console.log('No data found.');
    }
  } catch (error) {
    console.error(error);
  }
}
